{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": "./",
        "checkJs": false,
        "declaration": true,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "incremental": true,
        "module": "commonjs",
        "outDir": "./dist",
        "removeComments": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "target": "es2022",
        "useDefineForClassFields": false
    },
    "include": [
        "packages/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
        "gulpfile.js",
        "eslint.config.mjs"
    ]
}
