{
    "extends": "../tsconfig.build.json",
    "compilerOptions": {
        "outDir": ".",
        "rootDir": ".",
        "paths": {
            "@aequum/crudl": [ "../crudl" ],
            "@aequum/exceptions": [ "../exceptions" ],
            "@aequum/exceptions/*": [ "../exceptions/*" ],
            "@aequum/geojson-models": [ "../geojson-models" ],
            "@aequum/mongoose/*": [ "../mongoose/*" ],
            "@aequum/paginate-common": [ "../paginate-common" ],
            "@aequum/typeorm/*": [ "../typeorm/*" ],
            "@aequum/types": [ "../types" ],
            "@aequum/utils": [ "../utils" ],
            "@aequum/validators": [ "../validators" ]
        }
    },
    "exclude": [
        "node_modules",
        "dist",
        "test/**/*",
        "*.spec.ts"
    ],
    "references": [
        { "path": "../crudl/tsconfig.build.json" },
        { "path": "../exceptions/tsconfig.build.json" },
        { "path": "../geojson-models/tsconfig.build.json" },
        { "path": "../paginate-common/tsconfig.build.json" },
        { "path": "../typeorm/tsconfig.build.json" },
        { "path": "../types/tsconfig.build.json" },
        { "path": "../utils/tsconfig.build.json" },
        { "path": "../validators/tsconfig.build.json" }
    ]
}