{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": "./",
        "checkJs": false,
        "declaration": true,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "incremental": true,
        "module": "commonjs",
        "outDir": "./dist",
        "removeComments": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "target": "es2022",
        "useDefineForClassFields": false,
        "paths": {
            "@aequum/crudl": [ "./packages/crudl" ],
            "@aequum/exceptions": [ "./packages/exceptions" ],
            "@aequum/exceptions/*": [ "./packages/exceptions/*" ],
            "@aequum/geojson-models": [ "./packages/geojson-models" ],
            "@aequum/in-memory": [ "./packages/in-memory" ],
            "@aequum/in-memory/*": [ "./packages/in-memory/*" ],
            "@aequum/mongoose/*": [ "./packages/mongoose/*" ],
            "@aequum/paginate-common": [ "./packages/paginate-common" ],
            "@aequum/typeorm/*": [ "./packages/typeorm/*" ],
            "@aequum/types": [ "./packages/types" ],
            "@aequum/utils": [ "./packages/utils" ],
            "@aequum/validators": [ "./packages/validators" ]
        }
    },
    "include": [
        "packages/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
        "gulpfile.js",
        "eslint.config.mjs"
    ]
}
