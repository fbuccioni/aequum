{
    "compilerOptions": {
        "target": "es2022",
        "module": "nodenext",
        "declaration": false,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "useDefineForClassFields": false,
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": "./",
        "allowJs": true,
        "incremental": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "resolveJsonModule": true
    },
    "include": [
        "src",
        "./src/**/*.ts",
        "test",
        "e2e",
        "integration"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "prod"
    ]
}

